<% include ../header %>
<section id="tabs">
  <header class="rooms__header">
    <div class="rooms__header__container wrapper">
      <div class="rooms__header__content">
        <h1 class="rooms__header__title">Staff Team</h1>
        <nav class="news-category__navigation">
            <ul class="news-category__list">
              <% ranks.forEach(r => { %>
                <li class="news-category__item">
                  <a href="#tab-<%= r.id %>" class="news-category__link"><%= r.rank_name %></a>
                </li>
              <% }) %>
            </ul>
        </nav>
      </div>
    </div>
  </header>

  <div class="wrapper wrapper--content">
    <section class="wrapper wrapper--content rooms-wrapper" style="float:left;">
      <% ranks.forEach(r => { %>
        <div id="tab-<%= r.id %>">
          <% if (r.members.length > 0) { %>
            <% r.members.forEach(u => { %>
              <article class="news-header news-header--column" style="height: 0px;margin-bottom: 0px;min-height: 0px;"></article>
              <article class="news-header news-header--column" style="height: 0px;margin-bottom: 0px;min-height: 0px;"></article>
              <article class="news-header news-header--column">
                  <a href="/profile/<%= u.username %>" class="news-header__link news-header__banner">
                      <figure class="news-header__viewport" style="border-radius:50%">
                          <img src="/img/staff.png" class="news-header__image news-header__image--thumbnail" style="opacity:.5;">
                          <div class="staff_avatar" style="background: url(<%= website.figure_imager %>?figure=<%= u.look %>&amp;direction=2&amp;head_direction=3&amp;gesture=sml&amp;size=l);height: 124px;width: 110px;top: 0px;z-index: 9000;position: absolute;background-position: -8px -17px;"></div>
                      </figure>
                  </a>
                  <a href="/profile/<%= u.username %>" class="news-header__link news-header__wrapper">
                      <h2 class="news-header__title"><%= u.username %></h2>
                      <% if (u.online == '1') { %>
                        <img src="/img/online.gif">
                      <% } else { %>
                        <img src="/img/offline.gif">
                      <% } %>
                      <% if (r.badge_code != '') { %>
                        <img src="<%= website.swf_base %>/other/images/album1584/<%= r.badge_code %>.gif">
                      <% } %>
                  </a>
              </article>
            <% }) %>
          <% } else { %>
            <p>We don't have any staff members in this position!</p>
          <% } %>
        </div>
      <% }) %>
    </section>
  </div>
</section>


<% include ../footer %>
