{
  "name": "heroic",
  "bin": "build/index.js",
  "devDependencies": {
    "babel-plugin-root-import": "^5.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1"
  },
  "scripts": {
    "pretest": "clear",
    "test": "cd build && npm i && node index",
    "debug": "cd source && nodemon -L --exec babel-node index.js",
    "prebuild": "rm -rf build && mkdir build && npm run clean && clear",
    "build": "cd source && babel . --out-dir=../build --copy-files --ignore node_modules",
    "precompile": "npm run build",
    "compile": "pkg . --out-path compiled",
    "clean": "standard --fix --parser babel-eslint"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 Chrome versions"
            ]
          }
        }
      ]
    ],
    "plugins": [
      "transform-class-properties",
      "babel-plugin-root-import"
    ],
    "ignore": [
      "source/public/**/*"
    ],
    "compact": true
  },
  "pkg": {
    "scripts": "build/app/**/*.js",
    "assets": [
      "build/public/**/*"
    ],
    "targets": [
      "node9-macos-x64"
    ]
  },
  "standard": {
    "ignore": [
      "/source/publc/**/*.js"
    ]
  }
}
